{
	"name": "Livestream Highlighter",
	"description": "Finds the best moments of YouTube livestreams.",
	"version": "1.0",
	"manifest_version": 3,
	
	"permissions": ["activeTab"],
	"content_scripts": [{
		"matches": ["*://www.youtube.com/*"],
		"all_frames": true,
		"run_at": "document_end",
		"js": ["./js/video_page_load.js"],
		"css": ["./css/video_page_styling.css"]
	}]
}